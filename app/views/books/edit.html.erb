<h1>Editing Book</h1>
<div id="edit_book" class="edit_book">
  <!-- form_with部分 -->
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title,{id:"book_title",class:"book_title"} %>
    </div>
  	
  	<div class="field">
  	  <label>Body</label>
      <%= f.text_area :body,{id:"book_body",class:"book_body"} %>
  	</div>
  	
  	<div class="actions">
  	  <%= f.submit 'Update Book' %>
  	</div>
  <% end %>
</div>
  
<%= link_to("Show", book_path(@book.id),{class:"show"}) %>｜<%= link_to("Back", "/books",{class:"back"}) %>